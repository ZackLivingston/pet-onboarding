<li id="micropost-<%= micropost.id %>" class='micropost'>
    <%= link_to gravatar_for(micropost.user, size: 80), micropost.user %>
    <div class = 'micropost-content'>
        <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
        <span class='content'><%= micropost.content %></span>
        <span class='timestamp'>Posted <%= time_ago_in_words(micropost.created_at) %> ago.</span>
        <% if current_user == micropost.user %>
            <p class='delete-post'><%= link_to "delete", micropost, method: :delete %></p>
        <% end %>
    </div>
</li>