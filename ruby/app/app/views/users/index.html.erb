<% provide(:title, 'All users') %>

<h1>Users</h1>

<%= will_paginate %>

<ul class = 'users'>
  <% @users.each do |user|  %>
    <li class='user-index'>
      <%= gravatar_for user, size: 50 %>
      <%= link_to user.name, user %>
      <% if current_user.admin? %>
        | <%= link_to "delete", user, method: :delete %>
      <% end %>
    </li>
  <% end %>
</ul>

<%= link_to 'New User', new_user_path %>